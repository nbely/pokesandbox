# ============================================================
# PokeSandbox — Environment Variables Template
# Copy this file to .env and fill in the values.
# ============================================================

# -------------------------------------------------------
# Database
# Local development (Docker): mongodb://localhost:27017/pokesandbox
# Cloud (production):         mongodb+srv://<user>:<password>@<cluster>/<db>
# -------------------------------------------------------
DATABASE_URI=mongodb://localhost:27017/pokesandbox

# -------------------------------------------------------
# Discord Bot
# -------------------------------------------------------
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_GUILD_ID=

# -------------------------------------------------------
# Next.js / NextAuth
# -------------------------------------------------------
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000
DISCORD_CLIENT_SECRET=

# -------------------------------------------------------
# App type — used internally to determine shutdown behaviour
# Values: "bot" | "webapp"
# -------------------------------------------------------
APP_TYPE=
